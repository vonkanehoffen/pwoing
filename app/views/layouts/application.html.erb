<!DOCTYPE html>
<html>
<head>
  <title>Pwoing</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="/">Pwoing</a>
                <ul class="nav">
                    <% if current_user %>
                        <li><a href="#">Signed in as <%= current_user.name %></a></li>
                        <li><%= link_to "Sign out", signout_path %></li>
                    <% else %>
                        <li><%= link_to "Login / Sign Up", signin_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, id: "flash_#{name}", class: "alert alert-info" %>
        <% end %>
        <%= yield %>
    </div>

</body>
</html>
